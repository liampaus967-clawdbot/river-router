# River Router Configuration

# Database (PostgreSQL + PostGIS)
DATABASE_URL=postgresql://river_router:password@localhost:5432/river_router

# Redis (NWM cache)
REDIS_URL=redis://localhost:6379/0

# Data paths
GRAPH_PATH=/app/data/graph/national.pkl
NHDPLUS_PATH=/app/data/nhdplus/

# NWM Settings
NWM_BUCKET=noaa-nwm-pds
NWM_REGION=us-east-1
NWM_CACHE_TTL=3600

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
DEBUG=false

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,https://paddleways.com

# Logging
LOG_LEVEL=INFO
